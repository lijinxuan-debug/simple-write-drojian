<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="bottom|center_horizontal">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <solid android:color="#CC333333" /> </shape>
        </rotate>
    </item>

    <item android:bottom="6dp"> <shape android:shape="rectangle">
        <solid android:color="#CC333333" /> <corners android:radius="8dp" />
        <padding
            android:bottom="8dp"
            android:left="12dp"
            android:right="12dp"
            android:top="8dp" />
    </shape>
    </item>
</layer-list>