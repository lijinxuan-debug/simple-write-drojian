<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_marker_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_marker_black_rect"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_marker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:gravity="center"
            android:padding="4dp"
            android:text="最大显示3笔交易"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:background="#666666" />

        <TextView
            android:id="@+id/tv_marker_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/v_marker_arrow"
        android:layout_width="12dp"
        android:layout_height="10dp"
        android:layout_below="@id/ll_marker_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:background="@drawable/marker_arrow_triangle" />

</RelativeLayout>